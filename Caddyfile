{
    # Configuración global con email para certificados SSL
    email info@xtalento.com.co
}

# Evolution API en puerto estándar HTTPS (443)
evo.xtalento.com.co {
    reverse_proxy localhost:8080
}

# Chatbot en puerto estándar HTTPS (443)
bot.xtalento.com.co {
    reverse_proxy localhost:8000
    
    handle /webhook {
        reverse_proxy localhost:8000
    }
    
    handle /healthz {
        reverse_proxy localhost:8000
    }
    
    handle /register_webhook {
        reverse_proxy localhost:8000
    }
    
    handle /check_webhook {
        reverse_proxy localhost:8000
    }
    
    handle /sessions* {
        reverse_proxy localhost:8000
    }
}